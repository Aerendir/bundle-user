#!/usr/bin/env sh

bin/console doctrine:schema:validate &&
bin/console lint:yaml config &&
bin/console lint:twig templates --show-deprecations &&
bin/console lint:xliff translations &&
bin/console lint:container &&
vendor/bin/rector process src --dry-run &&
vendor/bin/php-cs-fixer fix --allow-risky yes --dry-run -v &&
vendor/bin/phpstan analyse src -c phpstan.neon --level max &&
vendor/bin/phan --progress-bar --dead-code-detection &&
vendor/bin/psalm --php-version=7.2 &&
bin/console security:check &&
composer outdated --direct &&
composer validate --strict
