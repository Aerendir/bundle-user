<?xml version="1.0"?>
<psalm
    phpVersion="7.4"
    cacheDirectory="./var/cache/psalm"
    allowPhpStormGenerics="true"
    checkForThrowsDocblock="true"
    hideExternalErrors="true"
    ignoreInternalFunctionNullReturn="false"
    ignoreInternalFunctionFalseReturn="false"
    requireVoidReturnType="false"
    strictBinaryOperands="true"
    totallyTyped="true"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="https://getpsalm.org/schema/config"
    xsi:schemaLocation="vendor-bin/phpunit/vendor/vimeo/psalm/config.xsd"
    errorBaseline=".baseline-psalm.xml"
>
    <projectFiles>
        <directory name="src"/>
        <directory name="tests"/>
        <ignoreFiles>
            <directory name="vendor"/>
            <file name="src/DependencyInjection/Configuration.php"/>
        </ignoreFiles>
    </projectFiles>

    <issueHandlers>
        <MissingThrowsDocblock errorLevel="suppress" />
        <RedundantIdentityWithTrue errorLevel="suppress" />
        <!-- Ignore some errors in DependencyInjection/SHQUsersExtension.php as not fixable -->
        <MixedArgument>
            <errorLevel type="suppress">
                <file name="src/Form/Type/PasswordResetRequestType.php" />
            </errorLevel>
        </MixedArgument>
        <MixedArrayAccess>
            <errorLevel type="suppress">
                <file name="src/DependencyInjection/SHQUsersExtension.php" />
            </errorLevel>
        </MixedArrayAccess>
        <MixedAssignment>
            <errorLevel type="suppress">
                <file name="src/DependencyInjection/SHQUsersExtension.php" />
            </errorLevel>
        </MixedAssignment>
    </issueHandlers>
    <plugins>
        <pluginClass class="Psalm\PhpUnitPlugin\Plugin"/>
        <pluginClass class="Weirdan\DoctrinePsalmPlugin\Plugin"/>
    </plugins>
</psalm>
