{
    "name": "serendipity_hq/bundle-users",
    "description": "A Symfony bundle that helps manage users in a Symfony app.",
    "keywords": ["user", "users"],
    "homepage": "https://github.com/Aerendir/bundle-users",
    "type": "symfony-bundle",
    "license": "MIT",
    "support": {
        "docs": "https://github.com/Aerendir/bundle-users/tree/dev/docs",
        "issues": "https://github.com/Aerendir/bundle-users/issues"
    },
    "authors": [
        {
            "name": "Adamo Aerendir Crespi",
            "email": "hello@aerendir.me"
        }
    ],
    "require": {
        "php": "^7.3",
        "serendipity_hq/component-console-styles": "dev-dev",
        "symfony/console": "^4.4|^5.1",
        "symfony/property-access": "^4.4|^5.1",
        "symfony/validator": "^4.4|^5.1",
        "thecodingmachine/safe": "^1.0"
    },
    "require-dev": {
        "ext-ast": "*",
        "bamarni/composer-bin-plugin": "^1.4",
        "roave/security-advisories": "dev-master",
        "symfony/browser-kit": "^4.4|^5.1",
        "symfony/css-selector": "^4.4|^5.1",
        "symfony/debug-bundle": "^4.4|^5.1",
        "symfony/monolog-bundle": "^2|^3",
        "symfony/phpunit-bridge": "^4.4|^5.1",
        "symfony/security": "^4.4|^5.1",
        "symfony/stopwatch": "^4.4|^5.1",
        "symfony/twig-bundle": "^4.4|^5.1",
        "symfony/var-dumper": "^4.4|^5.1",
        "symfony/web-profiler-bundle": "^4.4|^5.1|^5.0"
    },
    "config": {
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "SerendipityHQ\\Bundle\\UsersBundle\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SerendipityHQ\\Bundle\\UsersBundle\\Tests\\": "tests"
        }
    },
    "scripts": {
        "bin": "echo 'bin not installed'",
        "post-install-cmd": ["@composer bin all install --ansi"],
        "post-update-cmd": ["@composer bin all update --ansi"]
    }
}
